{
  "name": "wordwise",
  "version": "1.0.0",
  "description": "Real-time intelligent text editor with grammar checking and style suggestions",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:grammar": "cd shared/grammar && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "vercel-build": "npm run build:grammar && npm run build:backend && npm run build:frontend"
  },
  "keywords": [
    "text-editor",
    "grammar-check",
    "writing-assistant"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.10.0"
  },
  "workspaces": [
    "frontend",
    "backend",
    "shared/grammar"
  ]
}
