{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/src/server.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/$1"
    }
  ],
  "installCommand": "npm install",
  "buildCommand": "npm run vercel-build"
} 